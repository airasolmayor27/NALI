<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimary"> <!-- Set the background color to blue -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your emergency?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"> <!-- Set the text color to white -->
    </TextView>

    <EditText
        android:id="@+id/emergencyNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your emergency name"
        android:inputType="text"
        android:textColor="#FFFFFF"> <!-- Set the text color to white -->
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentLocationText"
        android:text="Current Location: "
        android:textStyle="italic"
        android:textColor="#FFFFFF"> <!-- Set the text color to white -->
    </TextView>
</LinearLayout>
